{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "~/test/*": [
        "test/*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  }
}